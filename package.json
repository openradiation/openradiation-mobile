{
  "name": "open-radiation",
  "version": "2.1.2",
  "author": "OpenRadiation",
  "homepage": "https://www.openradiation.org/",
  "description": "Les citoyens mesurent la radioactivité.",
  "scripts": {
    "start": "ionic serve --no-open --configuration mockDevice",
    "cordova:prepare": "ionic cordova prepare android ios --no-build",
    "build:mockDevice:android": "ionic cordova build android --configuration mockDevice",
    "build:mockDevice:ios": "ionic cordova build ios --configuration mockDevice",
    "build:beta:android": "ionic cordova build android --prod --release --buildConfig=build.json --configuration beta",
    "build:beta:ios": "ionic cordova build ios --prod --release --buildConfig=build.json --configuration beta",
    "build:android": "ionic cordova build android --prod --release --buildConfig=build.json",
    "build:ios": "ionic cordova build ios --prod --release --buildConfig=build.json",
    "run:mockDevice:android": "ionic cordova run android --configuration mockDevice",
    "run:mockDevice:ios": "ionic cordova run ios --configuration mockDevice",
    "run:android": "ionic cordova run android",
    "run:ios": "ionic cordova run ios",
    "lint": "ng lint",
    "analyze": "webpack-bundle-analyzer ./dist/stats.json",
    "compodoc:build": "compodoc -p src/tsconfig.app.json --disableLifeCycleHooks",
    "compodoc:serve": "compodoc -p src/tsconfig.app.json --disableLifeCycleHooks -s -w",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.scss\" \"src/**/*.md\" \"src/**/*.html\"",
    "extract": "ngx-translate-extract --input ./src --output ./src/assets/i18n/en.json ./src/assets/i18n/fr.json --clean --sort --format namespaced-json --format-indentation \"  \" --marker _"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@angular/common": "^7.2.2",
    "@angular/core": "^7.2.2",
    "@angular/forms": "^7.2.2",
    "@angular/http": "^7.2.2",
    "@angular/platform-browser": "^7.2.2",
    "@angular/platform-browser-dynamic": "^7.2.2",
    "@angular/router": "^7.2.2",
    "@ionic-native/ble": "^5.0.0",
    "@ionic-native/camera": "^5.0.0",
    "@ionic-native/core": "^5.0.0",
    "@ionic-native/device": "^5.0.0",
    "@ionic-native/diagnostic": "^5.0.0",
    "@ionic-native/ionic-webview": "^5.0.0",
    "@ionic-native/keyboard": "^5.0.0",
    "@ionic-native/network": "^5.0.0",
    "@ionic-native/screen-orientation": "^5.0.0",
    "@ionic-native/serial": "^5.0.0",
    "@ionic-native/social-sharing": "^5.0.0",
    "@ionic-native/splash-screen": "^5.0.0",
    "@ionic-native/status-bar": "^5.0.0",
    "@ionic/angular": "^4.1.0",
    "@mauron85/cordova-plugin-background-geolocation": "^3.0.3",
    "@ngx-translate/core": "~11.0.1",
    "@ngx-translate/http-loader": "~4.0.0",
    "@ngxs/devtools-plugin": "~3.4.3",
    "@ngxs/form-plugin": "~3.4.3",
    "@ngxs/logger-plugin": "~3.4.3",
    "@ngxs/router-plugin": "~3.4.3",
    "@ngxs/storage-plugin": "~3.4.3",
    "@ngxs/store": "~3.4.3",
    "@types/uuid": "^3.4.3",
    "cordova-android": "8.0.0",
    "cordova-ios": "5.0.0",
    "cordova-plugin-ble-central": "^1.2.2",
    "cordova-plugin-camera": "^4.0.3",
    "cordova-plugin-compat": "^1.2.0",
    "cordova-plugin-device": "^2.0.2",
    "cordova-plugin-inappbrowser": "^3.0.0",
    "cordova-plugin-ionic-keyboard": "^2.1.3",
    "cordova-plugin-ionic-webview": "^3.1.2",
    "cordova-plugin-network-information": "^2.0.1",
    "cordova-plugin-screen-orientation": "^3.0.1",
    "cordova-plugin-splashscreen": "^5.0.2",
    "cordova-plugin-sqlite-2": "^1.0.6",
    "cordova-plugin-statusbar": "^2.4.2",
    "cordova-plugin-whitelist": "^1.3.3",
    "cordova-plugin-x-socialsharing": "^5.4.4",
    "cordova.plugins.diagnostic": "^4.0.12",
    "cordovarduino": "0.0.10",
    "core-js": "^2.5.4",
    "es6-promise-plugin": "^4.2.2",
    "rxjs": "~6.3.3",
    "uuid": "^3.3.2",
    "zone.js": "^0.8.29"
  },
