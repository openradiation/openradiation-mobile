{
  "name": "open-radiation",
  "version": "2.3.5",
  "author": "OpenRadiation",
  "homepage": "https://www.openradiation.org/",
  "description": "Les citoyens mesurent la radioactivit√©.",
  "scripts": {
    "start": "ionic serve --no-open --configuration mockDevice",
    "cordova:prepare": "ionic cordova prepare android ios --no-build",
    "build:mockDevice:android": "ionic cordova build android --configuration mockDevice",
    "build:mockDevice:ios": "ionic cordova build ios --configuration mockDevice",
    "build:beta:android": "ionic cordova build android --configuration production --release --buildConfig=build.json --configuration beta",
    "build:beta:ios": "ionic cordova build ios --configuration production --release --buildConfig=build.json --configuration beta",
    "build:android": "ionic cordova build android --configuration production --release --buildConfig=build.json",
    "build:ios": "ionic cordova build ios --configuration production --release --buildConfig=build.json",
    "run:mockDevice:android": "ionic cordova run android --configuration mockDevice",
    "run:mockDevice:ios": "ionic cordova run ios --configuration mockDevice",
    "run:android": "ionic cordova run android",
    "run:ios": "ionic cordova run ios",
    "lint": "ng lint",
    "analyze": "webpack-bundle-analyzer ./www/stats.json",
    "compodoc:build": "compodoc -p src/tsconfig.app.json --disableLifeCycleHooks",
    "compodoc:serve": "compodoc -p src/tsconfig.app.json --disableLifeCycleHooks -s -w",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.scss\" \"src/**/*.md\" \"src/**/*.html\"",
    "extract": "ngx-translate-extract --input ./src --output ./src/assets/i18n/en.json ./src/assets/i18n/fr.json --clean --sort --format namespaced-json --format-indentation \"  \" --marker _",
    "check-outdated": "check-outdated --ignore-pre-releases --ignore-packages package1,package2 --columns name,type,current,latest,changes --types major,minor,patch,reverted"
  },
  "license": "Apache-2.0",
