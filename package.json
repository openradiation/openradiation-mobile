{
  "name": "open-radiation",
  "version": "2.0.2",
  "author": "OpenRadiation",
  "homepage": "https://www.openradiation.org/",
  "description": "Les citoyens mesurent la radioactivité.",
  "scripts": {
    "start": "ionic serve --no-open",
    "cordova:prepare": "ionic cordova prepare",
    "build:beta:android": "ionic cordova build android --prod --release --buildConfig=build.json --configuration beta",
    "build:beta:ios": "ionic cordova build ios --prod --release --buildConfig=build.json --configuration beta",
    "build:android": "ionic cordova build android --prod --release --buildConfig=build.json",
    "build:ios": "ionic cordova build ios --prod --release --buildConfig=build.json",
    "run:android": "ionic cordova run android",
    "run:ios": "ionic cordova run ios",
    "lint": "ng lint",
    "analyze": "webpack-bundle-analyzer ./dist/stats.json",
    "compodoc:build": "compodoc -p src/tsconfig.app.json --disableLifeCycleHooks",
    "compodoc:serve": "compodoc -p src/tsconfig.app.json --disableLifeCycleHooks -s -w",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.scss\" \"src/**/*.md\"",
    "extract": "ngx-translate-extract --input ./src --output ./src/assets/i18n/en.json ./src/assets/i18n/fr.json --clean --sort --format namespaced-json --format-indentation \"  \" --marker _",
    "pluggin:add": "ionic cordova plugin add"
  },
  "license": "Apache-2.0",
