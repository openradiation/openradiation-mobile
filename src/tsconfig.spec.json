{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@environments/*": [
        "./environments/*"
      ],
      "@capacitor/*": [
        "__mocks__/@capacitor/*"
      ]
    },
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts"
  ],
  "include": [
    "polyfills.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}